.company
  width 100%
  height auto
  padding-top 50px
  padding-bottom 50px

  .company-content
    width 100%
    height auto
    display flex
    display -webkit-flex !important
    justify-content center
    align-items center
    flex-direction column
    margin 0 auto

    .company-head
      width 100%
      height auto

      h2
        height 33px
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        margin-bottom 40px

        @media (min-width 768px)
          height 46px
          font-size 36px
          font-weight 300
          line-height 46px

    .company-img
      width auto
      height auto
      max-width 862px
      max-height 320px
      overflow hidden
      margin-bottom 18px

      img
        width 100%
        height 100%

    .company-text
      max-width 862px
      height auto
      padding 0 10px


      p
        color #2d2d2d
        font-family "DINPro"
        font-size 14px
        font-weight 400
        line-height 18px
        text-align left
        margin-bottom 20px
        @media (min-width 768px)
          font-size 16px
          font-weight 400
          line-height 21px






.refinans-block2
  width 100%
  height auto
  background-image linear-gradient(180deg, rgba(244,244,244,1) 0%, rgba(255,255,255,1) 100%)
  background-position bottom

  .fb2-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    flex-flow column
    justify-content center
    align-items center
    padding-top 10px
    padding-bottom 20px
    margin 0 auto
    @media (min-width 768px)
      max-width 690px
      flex-flow row wrap
      justify-content space-between
    @media (min-width 1280px)
      max-width 1112px
      padding-top 30px

    .info-block
      width 282px
      height auto
      display flex
      flex-direction row
      justify-content flex-start
      align-items center
      margin-bottom 20px
      @media (min-width 768px)
        width 272px
        height 70px
      @media (min-width 1280px)
        width 272px

      img
        width 40px
        height 40px
        margin-right 18px
        @media (min-width 768px)
          width 70px
          height 70px

      p
        color #2d2d2d
        font-family "DINPro"
        font-size 14px
        font-weight 400
        line-height 18px
        text-align left

        br
          display none
        @media (min-width 768px)
          max-width 165px
          font-size 16px
          font-weight 400
          line-height 21px

          br
            display block
        @media (min-width 1280px)
          max-width 165px



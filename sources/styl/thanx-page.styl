.thanx-block
  width 100%
  height auto
  background-image url("img/thanx-bg.png")
  background-repeat no-repeat
  background-position center center
  background-size auto 100%
  padding 0 20px
  box-sizing border-box
  background-color #f4f4f4
  @media (min-width 768px)
    background-size 100%


  .thanx-content
    width 100%
    height auto
    padding-top 100px
    padding-bottom 50px
    display flex
    flex-direction column
    justify-content center
    align-items center

    .thanx-head
      width 100%
      height auto
      @media (min-width 768px)
        width 450px
      @media (min-width 1280px)
        width 100%

      h1
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        margin-bottom 18px
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px
      p
        color #2d2d2d
        font-family "DINPro"
        font-size 18px
        font-weight 400
        line-height 23px
        margin-bottom 50px
        text-align center
        @media (min-width 768px)
          font-size 20px
          font-weight 400
          line-height 26px

    .thanx-text
      width 100%
      height auto
      border 1px solid #f2f2f2
      background-color #ffffff
      padding 20px 20px
      box-sizing border-box
      @media (min-width 768px)
        width 324px
        height auto
      @media (min-width 1280px)
        width 605px

      h2
        color #ea5d72
        font-family "DINPro"
        font-size 20px
        font-weight 400
        line-height 26px
        text-align center
        padding 0 30px
        margin-bottom 18px
        @media (min-width 768px)
          font-size 26px
          font-weight 400
          line-height 33px

      p
        color #2d2d2d
        font-family "DINPro"
        font-size 14px
        font-weight 400
        line-height 18px
        text-align center
        margin-bottom 18px
        @media (min-width 768px)
          font-size 16px
          font-weight 400
          line-height 21px

      .soc-icon
        width 100%
        display flex
        display -webkit-flex
        justify-content space-around
        align-items center
        margin 0 auto
        @media (min-width 768px)
          width 40%
        @media (min-width 1280px)
          width 20%

        img
          cursor pointer



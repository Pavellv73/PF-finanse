.credit-block3
  width 100%
  height auto
  padding-top 50px
  padding-bottom 50px
  @media (min-width 768px)
    background-image url("img/calculator-img.png")
    background-position right 50%
    background-repeat no-repeat

  .cb3-content
    width 100%
    height auto
    display flex
    justify-content center
    align-items center
    flex-direction column

    .cb3-head
      width auto
      height auto
      margin 0 auto

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        margin-bottom 20px

    .calculator
      width 100%
      height auto
      position relative

      .left-form
        width 100%
        max-width 350px
        height auto
        border 1px solid #f2f2f2
        background-color #ffffff
        padding 20px 20px
        box-sizing border-box
        display flex
        position relative
        flex-direction column
        justify-content center
        align-items center
        @media (min-width 1280px)
          padding-top 40px
          left calc(50% - 175px)


        p
          color #2d2d2d
          font-family "DINPro"
          font-size 16px
          font-weight 400
          line-height 21px
          margin-bottom 20px
          text-align center
          @media (min-width 768px)
            text-align left
            font-size 18px
            line-height 23px

        .input-block
          width 100%
          max-width 330px
          height 58px
          box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
          border-radius 2px
          border 1px solid #f2f2f2
          background-color #f8f8f8
          margin-bottom 20px
          box-sizing border-box

          label
            width 100%
            height auto
            text-align center
            color #7a7a7a
            font-family Roboto
            font-size 12px
            font-weight 300
            font-style italic
            line-height 16px
            margin 0 auto
            position relative
            top 15px
            left 15px

          input
            display none
            width auto
            height 35px
            outline none
            padding 0 30px
            background-color transparent
            border none
            box-shadow none

          .input-active
            display block

        button
          width 100%
          max-width 330px
          margin-bottom 20px
          @media (min-width 768px)
            max-width 260px
            margin-left 0
            &:focus
              background-color #e3e3e3
            &:active
              background-color #e3e3e3

        .form-info
          width 100%
          height auto
          display flex
          flex-direction row
          justify-content space-between
          align-items center

          p
            color #ababab
            font-family "DINPro"
            font-size 16px
            font-weight 500
            line-height 21px
            text-align left
            margin-bottom 0
            @media (min-width 768px)
              font-size 18px
              line-height 23px

          .form-Arrow
            width auto
            height 62px
            display flex
            justify-content center
            align-items center

            img
              transform rotate(90deg)
              @media (min-width 1280px)
                transform rotate(0deg)


      .result-credit
        display none
        width 100%
        max-width 350px
        height auto
        margin 0 auto
        box-sizing border-box
        border 1px solid #f2f2f2
        background-color #ffffff
        position relative
        top 20px
        right 0
        @media (min-width 768px)
          max-width 668px
        @media (min-width 1280px)
          position absolute
          top 0
          right 0
          max-width 700px

        p
          font-family "DINPro"
          font-size 18px
          line-height 23px
          color #2d2d2d
          font-weight 400
          padding 20px

          span
            color #80c453
            font-weight 500

          @media (min-width 768px)
            font-size 20px

        .table
          width 100%
          height auto
          @media (min-width 1280px)
            max-width 700px

          .table-position
            @media (min-width 768px)
              width auto
              height auto
              display flex
              flex-direction row
              justify-content center
              align-items center

            table
              width 100%
              margin-bottom 20px
              box-sizing border-box
              @media (min-width 768px)
                width 50%
                height auto
                margin-bottom 0

              tr:nth-child(even)
                background-color #f8f8f8

              th
                display flex
                flex-direction row
                justify-content flex-start
                padding 14px 10px
                box-sizing border-box

                p
                  width 200px
                  padding 14px 0
                  box-sizing border-box
                  color #2d2d2d
                  font-family "DINPro"
                  font-size 18px
                  font-weight 400
                  line-height 23px
                  text-align left
                  @media (min-width 768px)
                    font-size 20px
                    font-weight 400
                    line-height 26px


                img
                  width 40px
                  height 40px
                  margin-right 18px
                  margin-top 18px
                  @media (min-width 768px)
                    width 70px
                    height 70px
                    margin-top 0

              td
                border 1px solid #f2f2f2
                padding 10px 10px
                display flex
                flex-direction row
                justify-content space-between
                align-items center
                box-sizing border-box

                p
                  max-width 45%
                  color #2d2d2d
                  font-family "DINPro"
                  font-size 14px
                  font-weight 400
                  line-height 18px
                  padding 14px 0
                  box-sizing border-box
                  @media (min-width 768px)
                    font-size 16px
                    font-weight 400
                    line-height 21px
                  @media (min-width 1280px)
                    font-size 16px
                    font-weight 400
                    line-height 21px

                span
                  width auto
                  color #2d2d2d
                  font-family "DINPro"
                  font-size 14px
                  font-weight 500
                  line-height 18px
                  @media (min-width 768px)
                    font-size 16px
                    font-weight 500
                    line-height 21px
                  @media (min-width 1280px)
                    font-size 16px
                    font-weight 500
                    line-height 21px

        .cash
          width auto
          height auto
          display flex
          flex-direction column
          justify-content flex-start
          align-items flex-start
          border 1px solid #f2f2f2
          background-color #ffffff
          padding 10px 20px
          @media (min-width 768px)
            flex-direction row
            justify-content space-between


          p
            color #2d2d2d
            font-family "DINPro"
            font-size 18px
            font-weight 400
            line-height 23px
            padding 0

          .green-text
            width auto
            padding 0
            color #80c453
            font-family "DINPro"
            font-size 20px
            font-weight 400
            line-height 26px

        .overpayments
          width 100%
          height auto
          padding 20px
          box-sizing border-box

          p
            font-family "DINPro"
            font-size 16px
            line-height 21px
            color #2d2d2d
            font-weight 400
            padding 0
            span
              color #ea5d72
              font-weight 500
            @media (min-width 768px)
              font-size 18px


        form
          width 100%
          height auto
          background-color #f8f8f8
          padding 20px
          box-sizing border-box
          margin-bottom 0
          position relative
          @media (min-width 768px)
            max-width 100%
            display flex
            flex-direction row
            justify-content flex-end
            align-items center

          .input-block
            background-color #FFFFFF
            max-width 400px
            width 100%
            height 58px
            box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
            border-radius 2px
            border 1px solid #f2f2f2
            margin-bottom 20px
            box-sizing border-box
            @media (min-width 768px)
              position absolute
              left 20px
              top 20px

            label
              width 100%
              height auto
              text-align center
              color #7a7a7a
              font-family Roboto
              font-size 12px
              font-weight 300
              font-style italic
              line-height 16px
              margin 0 auto
              position relative
              top 15px
              left 15px

            input
              margin-bottom 20px
              background-color #FFFFFF
              width auto
              display none
              height 35px
              outline none
              padding 0 30px
              border none
              box-shadow none
              @media (min-width 768px)
                width 400px


          button
            width 100%
            @media (min-width 768px)
              width 280px
              margin-bottom 0


body
  width 100%
  height 100%
  background-color #ffffff
  padding-top 50px
  &.no-scroll
    width 100%
    height 100vh
    overflow hidden

  &.scroll
    overflow auto

a
  text-decoration none

input
  background-color #fff
  border 1px solid #999
  border-radius 4px
  color #999
  font-family "DINPro"
  font-size 14px
  font-weight 400
  line-height 18px
  &:focus
  &:active
    border 1px solid #19a707
    color #1e1e1e

.err-form
  border-color red!important

.blur
  filter blur(9px)


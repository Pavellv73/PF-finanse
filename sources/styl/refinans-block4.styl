.refinans-block4
  width 100%
  height auto
  padding-top 50px
  padding-bottom 50px

  .rb4-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    flex-direction column
    justify-content center
    align-items center

    .rb4-head
      width 100%
      text-align center
      padding 0 20px
      box-sizing border-box
      margin-bottom 20px

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px

    .advantages-blocks
      width 100%
      height auto
      display -webkit-flex
      display flex
      flex-direction column
      justify-content center
      align-items center
      @media (min-width 768px)
        max-width 690px
        flex-flow row wrap
        justify-content space-between
      @media (min-width 1280px)
        max-width 1112px

      .advantages-block
        width 280px
        height 94px
        border 1px solid #f2f2f2
        background-color #ffffff
        padding 20px
        display flex
        flex-direction row
        justify-content center
        align-items center
        box-sizing border-box
        margin-bottom 20px
        @media (min-width 768px)
          width 323px
          height 103px

        img
          width 40px
          height 40px
          margin-right 18px

        p
          color #2d2d2d
          font-family "DINPro"
          font-size 14px
          font-weight 500
          line-height 18px
          @media (max-width 768px)
            width 190px


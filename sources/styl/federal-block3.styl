.federal-sec3
  width 100%
  height auto

  .fs3-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column

    .fs3-head
      width 100%
      height auto
      padding-top 50px
      @media (min-width 768px)
        padding-top 100px

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        margin-bottom 20px
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px
          margin-bottom 40px


    .pros
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        flex-direction row
        justify-content space-around
      @media (min-width 1280px)
        justify-content space-between

      .pros1, .pros2, .pros3
        width 280px
        height 80px
        border 1px solid #f2f2f2
        background-color #ffffff
        padding 20px
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        box-sizing border-box
        margin-bottom 20px
        @media (min-width 768px)
          width 208px
          height 160px
        @media (min-width 1280px)
          width 355px
          height 110px

        img
          width 40px
          height 40px
          margin-right 18px
          @media (min-width 768px)
            width 70px
            height 70px

        p
          color #2d2d2d
          font-family "DINPro"
          font-size 22px
          font-weight 300
          line-height 28px
          
    .predestination
      width 100%
      height auto
      display flex
      display -webkit-flex 
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 1280px)
        flex-flow row wrap
        justify-content space-between

      .bitmap
        width 280px
        height 250px
        margin-bottom 20px
        overflow hidden
        background-repeat no-repeat
        background-size auto
        background-position center
        position relative
        @media (min-width 768px)
          width 668px
          height 250px
          background-size 100%
        @media (min-width 1280px)
          width 550px
          height 250px
          background-size 110%
        &:hover
          .case-discription
            top 0
      
      .stationary-shops
        background-image url("img/bitmap-img.png")

      .internet-shops
        background-image url("img/bitmap-img2.png")

      .exit-trade
        background-image url("img/bitmap-img3.png")
        @media (min-width 1280px)
          width 360px
          height 250px

      .sphere-services
        background-image url("img/bitmap-img4.png")
        @media (min-width 1280px)
          width 360px
          height 250px

      .contracts
        background-image url("img/bitmap-img5.png")
        @media (min-width 1280px)
          width 360px
          height 250px

.case-discription
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.4)
  padding 20px
  box-sizing border-box
  position absolute
  top 67%
  transition all ease-out 0.3s
  @media (min-width 768px)
    top 59%


  h3
    color #ffffff
    font-family "DINPro"
    font-size 22px
    font-weight 300
    line-height 28px
    text-align left
    margin-bottom 10px
    @media (min-width 768px)
      font-size 26px
      font-weight 300
      line-height 33px

  p
    color #ffffff
    font-family "DINPro"
    font-size 16px
    font-weight 400
    line-height 21px



.new-content
  width 100%
  height auto

  .info-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    padding-top 100px

    .new-head
      width 100%
      height auto
      margin-bottom 56px
      padding 0 30px
      position relative
      @media (min-width 768px)
        padding 0 80px

      a
        p
          color #2bacfe
          font-family "DINPro"
          font-size 14px
          font-weight 500
          line-height 18px
          display none
          @media (min-width 768px)
            display block
            position absolute
            top 5px
            left -5px


        img
          width 24px
          height 15px
          position absolute
          top 5px
          left -5px
          @media (min-width 768px)
            display none
          @media (min-width 1280px)
            display block
            top 7px
            left -35px



      h1
        color #2d2d2d
        font-family "DINPro"
        font-size 22px
        font-weight 300
        line-height 28px
        text-align left
        margin-bottom 18px
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px


      p
        color #2d2d2d
        font-family "DINPro"
        font-size 14px
        font-weight 400
        line-height 18px
        @media (min-width 768px)
          font-size 16px
          font-weight 400
          line-height 21px

    .img-head
      width 100%
      height auto
      overflow hidden
      display flex
      justify-content center
      align-items center
      padding 0 30px
      @media (min-width 768px)
        padding 0 80px

      img
        width 100%
        height auto


    .new-text
      width 100%
      height auto
      padding 20px 30px
      @media (min-width 768px)
        padding 20px 80px


      p
        color #2d2d2d
        font-family "DINPro"
        font-size 14px
        font-weight 400
        line-height 18px
        text-align justify
        padding 20px 0
        @media (min-width 768px)
          font-size 16px
          font-weight 400
          line-height 21px

      .img-block
        width 100%
        height auto
        display flex
        justify-content center
        align-items center
        flex-direction column
        @media (min-width 768px)
          flex-direction row

        img
          width 100%
          margin-bottom 18px
          @media (min-width 768px)
            width 50%

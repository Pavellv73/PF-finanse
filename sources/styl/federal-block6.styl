.federal-block6
  width 100%
  height auto

  .fs6-content
    width 100%
    height auto
    padding-top 50px

    .fs6-head
      width 100%
      height auto

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        border-bottom 2px solid #f2f2f2
        padding-bottom 20px
        text-align center
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px

      p
        color #2d2d2d
        font-family "DINPro"
        font-size 18px
        font-weight 400
        line-height 23px
        padding-top 20px
        padding-bottom 20px
        text-align center
        @media (min-width 768px)
          font-size 20px
          font-weight 400
          line-height 26px

    .advantages-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      background-color #f8f8f8
      padding-top 20px
      padding-bottom 20px
      padding-left 15px
      padding-right 15px
      @media (min-width 768px)
        flex-flow row wrap
        justify-content space-between
        align-items flex-start
        padding-top 30px
        padding-bottom 30px
        padding-left 40px
        padding-right 40px

      .advantage-block
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items flex-start
        flex-direction row
        margin-bottom 18px
        @media (min-width 768px)
          width 48%
          justify-content flex-start
          align-items flex-start

        img
          width 18px
          height 18px
          margin-right 18px

        p
          color #2d2d2d
          font-family "DINPro"
          font-size 14px
          font-weight 400
          line-height 18px
          @media (min-width 768px)
            font-size 16px
            font-weight 400
            line-height 21px

    .worsening-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      padding 20px 15px
      @media (min-width 768px)
        flex-direction row
        justify-content space-between
        align-items flex-start
        padding 20px 25px

      .worsening-block
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items flex-start
        flex-direction row
        margin-bottom 20px
        @media (min-width 768px)
          width 49%
          flex-direction column

        img
          width 40px
          height 40px
          margin-right 18px
          @media (min-width 768px)
            width 70px
            height 70px
            margin-bottom 18px

        p
          color #2d2d2d
          font-family "DINPro"
          font-size 14px
          font-weight 400
          line-height 18px
          @media (min-width 768px)
            font-size 16px
            font-weight 400
            line-height 21px

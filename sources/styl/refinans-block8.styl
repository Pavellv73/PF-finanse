.refinans-block8
  width 100%
  height auto
  background-color #3b6a8d
  padding-top 50px
  padding-bottom 50px
  position relative
  @media (min-width 768px)
    padding-top 100px
    padding-bottom 100px

  .rb8-bg
    background-image url("img/moneybg-img.png")
    background-repeat no-repeat
    background-position center
    opacity 0.3
    z-index 0
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    @media (min-width 768px)
      height 106%

    @media (min-width 1280px)
      opacity 1.0
      background-position right




  .rb8-content
    width 100%
    height auto
    display flex
    display -webkit-flex !important
    justify-content flex-start
    flex-direction column
    align-items center
    z-index 2
    margin 0 auto
    @media (min-width 768px)
      align-items flex-start
    @media (min-width 1280px)
      align-items flex-start
      max-width 1112px

    .rb8-head
      width auto
      height auto
      z-index 1
      @media (min-width 1280px)
        width auto
        align-items center

      h2
        font-family "DINPro"
        font-size 26px
        font-weight 700
        line-height 33px
        text-align left
        max-width 605px
        color #f8f8f8
        @media (min-width 768px)
          font-size 36px
          font-weight 700
          line-height 46px


      p
        color #f8f8f8
        font-family "DINPro"
        font-size 18px
        font-weight 400
        line-height 23px
        text-align left
        max-width 550px
        @media (min-width 768px)
          font-size 20px
          font-weight 400
          line-height 26px

    form

      height auto
      margin-top 40px
      z-index 1
      display flex
      justify-content flex-start
      align-items flex-start
      flex-direction column
      @media (min-width 1280px)
        width 600px
        display flex
        justify-content flex-start
        align-items flex-start

      input
        margin-bottom 18px
        border none
        outline none
        padding-left 8px
        color #7a7a7a
        font-family Roboto
        font-size 14px
        font-weight 300
        font-style italic
        line-height 16px


.credit-block7
  width 100%
  height auto
  padding-top 50px
  padding-bottom 50px

  .cb7-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content flex-start
    align-items flex-start
    flex-direction column
    margin 0 auto

    .cb7-head
      width 100%
      height auto
      padding 0 20px

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        margin-bottom 20px
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px
          margin-bottom 40px

    .cb7-infobloks
      width auto
      height auto
      display flex
      flex-flow row wrap
      justify-content space-between
      align-items flex-start
      margin 0 auto

      .cb7-infoblok
        max-width 280px
        height auto
        display flex
        flex-direction row
        justify-content flex-start
        align-items flex-start
        margin-bottom 20px
        @media (min-width 768px)
          max-width 323px
          margin-bottom 40px
        @media (min-width 1280px)
          max-width 370px


        .inf-img
          margin-right 10px
        .inf-text
          p
            font-family "DINPro"
            font-size 14px
            font-weight 400
            line-height 18px
            color #2d2d2d
            span
              font-weight 500

            @media (min-width 768px)
              font-size 16px
              font-weight 400
              line-height 21px

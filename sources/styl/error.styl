.error-block
  width 100%
  height auto
  padding 0 20px
  box-sizing border-box
  background-color #fdfdfd

  .error-content
    width 100%
    height auto
    padding-top 100px
    padding-bottom 50px
    display flex
    flex-direction column
    justify-content center
    align-items center

    .error-head
      height auto
      border 1px solid #ea5d72
      padding 20px 20px
      display flex
      flex-direction row
      justify-content center
      align-items center
      align-content center
      box-sizing border-box
      @media (min-width 768px)
        width 668px
      @media (min-width 1280px)
        width 604px

      img
        width 40px
        height 40px
        margin-right 18px

      p
        color #ea5d72
        font-family "DINPro"
        font-size 18px
        font-weight 400
        line-height 23px
        text-align center
        @media (min-width 768px)
          font-size 18px
          font-weight 400
          line-height 26px

    .error-text
      width 100%
      height auto
      padding-top 20px
      box-sizing border-box
      @media (min-width 768px)
        width 668px
        height auto
        padding-top 40px
      @media (min-width 1280px)
        width 605px

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        padding 0 30px
        margin-bottom 18px
        @media (min-width 768px)
          font-size 36px
          font-weight 300
          line-height 46px
          margin-bottom 40px


      form
        width 100%
        height auto
        border 1px solid #f2f2f2
        background-color #ffffff
        padding 20px 20px
        box-sizing border-box
        @media (min-width 768px)
          padding 40px 40px

        textarea
          width 100%
          height 116px
          box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
          border-radius 2px
          border 1px solid #f2f2f2
          background-color #f8f8f8
          color #7a7a7a
          font-family Roboto
          font-size 14px
          font-weight 300
          font-style italic
          line-height 16px
          padding-top 21px
          padding-left 30px
          box-sizing border-box
          margin-bottom 20px


        input
          width 100%
          height 58px
          box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
          border-radius 2px
          border 1px solid #f2f2f2
          background-color #f8f8f8
          margin-bottom 18px
          text-align center
          color #7a7a7a
          font-family Roboto
          font-size 14px
          font-weight 300
          font-style italic
          line-height 16px

        .action-block
          width 100%
          height auto
          display flex
          display -webkit-flex
          flex-direction column
          justify-content center
          align-items center
          @media (min-width 768px)
            flex-direction row
            justify-content space-between

          button
            width 100%
            @media (min-width 768px)
              width 242px

          .error-but
            display flex
            display -webkit-flex
            flex-direction row
            justify-content space-around
            align-items center
            margin-top 20px

            p
              font-family "DINPro"
              font-size 14px
              line-height 18px
              color #2d2d2d
              font-weight 400
              a
                color #2bacfe
                font-weight 500

            img
              margin-left 5px







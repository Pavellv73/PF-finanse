.refinans-block3
  width 100%
  height auto
  padding-top 50px
  padding-bottom 50px
  @media (min-width 768px)
    background-image url("img/calculator-img.png")
    background-position right 50%
    background-repeat no-repeat

  .rb3-content
    width 100%
    height auto
    display flex
    justify-content center
    align-items center
    flex-direction column

    .rb3-head
      width auto
      height auto
      margin 0 auto

      h2
        color #2d2d2d
        font-family "DINPro"
        font-size 26px
        font-weight 300
        line-height 33px
        text-align center
        margin-bottom 20px

    .calculator
      width 100%
      height auto
      margin 0 auto
      position relative

      .left-form
        width 100%
        max-width 350px
        height auto
        border 1px solid #f2f2f2
        background-color #ffffff
        padding 20px 20px
        box-sizing border-box
        display flex
        position relative
        flex-direction column
        justify-content center
        align-items center
        @media (min-width 1280px)
          padding-top 40px
          left calc(50% - 175px)

        p
          color #2d2d2d
          font-family "DINPro"
          font-size 16px
          font-weight 400
          line-height 21px
          margin-bottom 20px
          text-align center
          @media (min-width 768px)
            text-align left
            font-size 18px
            line-height 23px

        .input-block
          width 100%
          max-width 330px
          height 58px
          box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
          border-radius 2px
          border 1px solid #f2f2f2
          background-color #f8f8f8
          margin-bottom 20px
          box-sizing border-box

          label
            width 100%
            height auto
            text-align center
            color #7a7a7a
            font-family Roboto
            font-size 12px
            font-weight 300
            font-style italic
            line-height 16px
            margin 0 auto
            position relative
            top 15px
            left 15px

          input
            display none
            width auto
            height 35px
            outline none
            padding 0 30px
            background-color transparent
            border none
            box-shadow none

          .input-active
              display block

        button
          width 100%
          max-width 330px
          margin-bottom 20px
          @media (min-width 768px)
            max-width 260px
            margin-left 0
            &:focus
              background-color #e3e3e3
            &:active
              background-color #e3e3e3

        .form-info
          width 100%
          height auto
          display flex
          flex-direction row
          justify-content space-between
          align-items center

          p
            color #ababab
            font-family "DINPro"
            font-size 16px
            font-weight 500
            line-height 21px
            text-align left
            margin-bottom 0
            @media (min-width 768px)
              font-size 18px
            line-height 23px

          .form-Arrow
            width auto
            height 62px
            display flex
            justify-content center
            align-items center

            img
              transform rotate(90deg)
              @media (min-width 1280px)
                transform rotate(0deg)


      .result-refinanse
        display none
        width 100%
        max-width 350px
        height auto
        box-sizing border-box
        border 1px solid #f2f2f2
        background-color #ffffff
        position relative
        top 20px
        right 0
        @media (min-width 768px)
          max-width 668px
        @media (min-width 1280px)
          position absolute
          top 0
          right 0
          max-width 700px

        p
          font-family "DINPro"
          font-size 18px
          line-height 23px
          color #2d2d2d
          font-weight 400
          padding 20px

          span
            color #80c453
            font-weight 500

          @media (min-width 768px)
            font-size 20px

        .result-images
          width 100%
          height auto
          padding 20px
          box-sizing border-box
          display flex
          display -webkit-flex
          flex-direction column
          justify-content center
          align-items center
          @media (min-width 768px)
            width 100%
            flex-direction row
            justify-content space-between


          .result-img
            width 100%
            height 180px
            margin-bottom 20px
            display flex
            overflow hidden
            position relative
            @media (min-width 768px)
              max-width 303px

            .fg
              width 100%
              height 50%
              margin-bottom 0
              background-color rgba(0, 0, 0, 0.3)
              overflow hidden
              position absolute
              bottom 0
              z-index 2

              p
                color #ffffff
                font-family "DINPro"
                font-size 22px
                font-weight 300
                line-height 28px

            img
              width 100%
              height auto
              position absolute
              top 0
              left 0

        .result-cash
          width 100%
          height auto
          border 1px solid #f2f2f2
          background-color #f8f8f8

          p
            font-family "DINPro"
            font-size 16px
            line-height 21px
            color #2d2d2d
            font-weight 400
            span
              color #80c453
              font-weight 500
            @media (min-width 768px)
              font-size 20px
              line-height 23px


            br
                display none

        .overpayments
          width 100%
          height auto
          padding 20px
          box-sizing border-box

          p
            font-family "DINPro"
            font-size 16px
            line-height 21px
            color #2d2d2d
            font-weight 400
            padding 0
            span
              color #ea5d72
              font-weight 500
            @media (min-width 768px)
              font-size 18px


        form
          width 100%
          height auto
          background-color #f8f8f8
          padding 20px
          box-sizing border-box
          margin-bottom 0
          position relative
          @media (min-width 768px)
            max-width 100%
            display flex
            flex-direction row
            justify-content flex-end
            align-items center

          .input-block
            background-color #FFFFFF
            max-width 400px
            width 100%
            height 58px
            box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.2)
            border-radius 2px
            border 1px solid #f2f2f2
            margin-bottom 20px
            box-sizing border-box
            @media (min-width 768px)
              position absolute
              left 20px
              top 20px

            label
              width 100%
              height auto
              text-align center
              color #7a7a7a
              font-family Roboto
              font-size 12px
              font-weight 300
              font-style italic
              line-height 16px
              margin 0 auto
              position relative
              top 15px
              left 15px

            input
              margin-bottom 20px
              background-color #FFFFFF
              width auto
              display none
              height 35px
              outline none
              padding 0 30px
              border none
              box-shadow none
              @media (min-width 768px)
                width 400px


          button
            width 100%
            @media (min-width 768px)
              width 280px
              margin-bottom 0

